{% extends "::base.html.twig" %}

{% block stylesheets %}
{% stylesheets 
    "@BthuillierMainBundle/Resources/public/css/bootstrap.css"
    "@BthuillierMainBundle/Resources/public/css/main.css"
%}
    <link href="{{ asset_url }}" rel="stylesheet" />
{% endstylesheets %}
{% endblock %}
{% block body %}
                
                
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">Benjamin Thuillier</a>
          <ul class="nav">
            <li class="active"><a href="#">Blog</a></li>
            <li><a href="#about">CV</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="content">
        <div class="page-header">
          <h1>{% block page_name %}{%endblock%} <small>{% block page_description %}{%endblock%}</small></h1>
        </div>
        <div class="row">
          <div class="span14">
                {% block content %}
                {%endblock%}                
          </div>
        </div>
      </div>

      <footer>
        <p>2011 - Powered by Symfony2, Doctrine-MongoDB-ODM, Less and Twitter-Bootstrap. Fork me on Github.</p>
      </footer>

    </div> <!-- /container -->

{% javascripts
    '@BthuillierMainBundle/Resources/public/js/jquery.js'
    '@BthuillierMainBundle/Resources/public/js/*.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
 <script type="text/javascript">
$(window).load(accordion.CV.bind);
    </script>
{% endblock %}
